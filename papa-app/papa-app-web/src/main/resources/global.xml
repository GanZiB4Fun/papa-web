<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE global_data [
        <!ELEMENT global_data (global)>
        <!ELEMENT global (param+)>
        <!ATTLIST param name CDATA #REQUIRED value CDATA #REQUIRED>
        ]>
<global_data>
    <global>
        <param name="host_url" value="http://${host.domain}"/>
        <param name="server_url" value="http://${host.domain}/app"/>
        <param name="style_url" value="http://${host.domain}/app/style"/>
        <param name="js_url" value="http://${host.domain}/app/js"/>
        <param name="images_url" value="http://${host.domain}/app/images"/>
    </global>
</global_data>
